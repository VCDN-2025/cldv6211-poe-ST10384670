@model EVENT_EASE.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Confirm Deletion</h3>
        </div>

        <div class="card-body">
            <h5 class="text-danger fw-semibold mb-4">⚠️ Are you sure you want to delete this booking?</h5>

            <dl class="row">
                <dt class="col-sm-3 fw-semibold">Client Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ClientName)</dd>

                <dt class="col-sm-3 fw-semibold">Client Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ClientEmail)</dd>

                <dt class="col-sm-3 fw-semibold">Number of Guests</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NumberOfGuests)</dd>

                <dt class="col-sm-3 fw-semibold">Event</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.EventId)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="BookingId" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">← Cancel</a>
                    <input type="submit" value="Delete Booking" class="btn btn-danger fw-bold shadow-sm" />
                </div>
            </form>
        </div>
    </div>
</div>

