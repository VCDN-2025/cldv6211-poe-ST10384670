@model EVENT_EASE.Models.Event

@{
    ViewData["Title"] = "Delete Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}


<style>
    .delete-card {
        background-color: #fff3f3;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-top: 3rem;
    }

    h1, h3 {
        color: #dc3545;
    }

    dt {
        font-weight: 600;
        color: #6c757d;
    }

    dd {
        color: #212529;
    }

    .btn-danger {
        min-width: 100px;
    }

    .btn-secondary {
        margin-left: 1rem;
    }
</style>

<div class="container">
    <div class="delete-card col-md-8 mx-auto">
        <h1 class="text-center mb-3">Delete Event</h1>
        <h3 class="text-center mb-4">Are you sure you want to delete this?</h3>

        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Title)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Date)</dt>
            <dd class="col-sm-9">@Model.Date?.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Time)</dt>
            <dd class="col-sm-9">@Model.Time?.ToString("hh\\:mm")</dd>

            <dt class="col-sm-3">Venue</dt>
            <dd class="col-sm-9">@Model.Venue?.Name</dd>
        </dl>

        <form asp-action="Delete" class="mt-4 text-center">
            <input type="hidden" asp-for="EventId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
