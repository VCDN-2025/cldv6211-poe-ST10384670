@model IEnumerable<EVENT_EASE.Models.Event>

@{
    ViewData["Title"] = "Events Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #e0f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1 {
        color: #00bcd4;
        font-weight: 700;
        margin-top: 20px;
        margin-bottom: 30px;
    }

    .btn-success {
        background-color: #00acc1;
        border-color: #00acc1;
        font-weight: 600;
        border-radius: 5px;
        padding: 8px 18px;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #0097a7;
            border-color: #0097a7;
        }

    table {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    thead {
        background-color: #00bcd4;
        color: white;
        font-weight: 700;
    }

    th, td {
        padding: 12px 15px;
        vertical-align: middle;
        text-align: center;
    }

    tbody tr:hover {
        background-color: #f1faff;
    }

    .btn-group .btn {
        font-weight: 600;
        border-radius: 4px;
        padding: 6px 12px;
        margin: 0 2px;
        transition: background-color 0.3s ease;
    }

    .btn-warning {
        background-color: #ffb300;
        border-color: #ffb300;
        color: black;
    }

        .btn-warning:hover {
            background-color: #e6a700;
            border-color: #e6a700;
            color: black;
        }

    .btn-primary {
        background-color: #00acc1;
        border-color: #00acc1;
    }

        .btn-primary:hover {
            background-color: #0097a7;
            border-color: #0097a7;
        }

    .btn-danger {
        background-color: #e53935;
        border-color: #e53935;
        color: white;
    }

        .btn-danger:hover {
            background-color: #d32f2f;
            border-color: #d32f2f;
            color: white;
        }

    .img-thumbnail {
        max-height: 80px;
        border-radius: 8px;
        border: 1px solid #00acc1;
    }
</style>

<h1 class="text-primary mb-4">Events</h1>

<p>
    <a asp-action="Create" class="btn btn-success">+ Create New Event</a>
</p>

<table class="table table-bordered table-hover align-middle text-center">
    <thead class="table-light">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
            <th>Time</th>
            <th>Venue</th>
            <th>Event Type</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Date?.ToString("yyyy-MM-dd")</td>
                <td>@item.Time?.ToString(@"hh\:mm")</td>
                <td>@item.Venue?.Name</td>
                <td>@item.EventType?.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Event Image" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">No image</span>
                    }
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-sm btn-primary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
